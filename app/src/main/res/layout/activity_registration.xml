<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0099cc">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="271dp"
            android:layout_height="278dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp">
        <TextView
                android:layout_width="match_parent"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_height="65dp"
                android:id="@+id/textView"
                android:text="@string/dodaj_u_ytkownika"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:ems="10"
                android:id="@id/loginField" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:hint="@string/login"
                android:autofillHints=""/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password" android:hint="@string/has_o"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:autofillHints=""/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/confirmation" android:hint="@string/powt_rz_has_o"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:autofillHints=""/>
        <Button
                android:text="@string/zarejestruj"
                android:background="#61009688"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/registerButton"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>