<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:background="#8FC7F3"
            android:text="Title"
            android:textSize="10pt"
            android:textColor="#000000"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#DDDDDD"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:text=""
            android:id="@+id/titleEditText"/>
    <TextView
            android:text="Description"
            android:background="#8FC7F3"
            android:textSize="10pt"
            android:textColor="#000000"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionPlainText"/>
    <EditText
            android:background="#DDDDDD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textPersonName"
            android:text=""
            android:id="@+id/descriptionEditText" android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="Cancel"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cancelButton" android:layout_weight="1"/>
        <Button
                android:text="Add"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/addButton" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>