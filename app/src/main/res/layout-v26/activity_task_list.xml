<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TaskListActivity">
    <TextView
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="TODO"
            android:textColor="#0099cc"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15pt"
            android:layout_width="match_parent"
            android:layout_height="32dp" android:id="@+id/toDoLabel"/>

    <ListView
            android:layout_weight="2"
            android:choiceMode="singleChoice"
            android:listSelector="#8FC7F3"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tasksListView"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
        <Button
                android:text="DONE"
                android:enabled="false"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doneButton" android:layout_weight="1"/>
        <Button
                android:text="SZCZEGÓŁY"
                android:enabled="false"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/editTaskButton" android:layout_weight="1"/>
        <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#0099cc"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_input_add"
                android:id="@+id/newTaskButton"
                android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>